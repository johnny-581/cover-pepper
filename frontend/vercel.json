{
    "rewrites": [
        {
            "source": "/app/:path*",
            "destination": "/"
        },
        {
            "source": "/api/:path*",
            "destination": "https://cover-pepper-production.up.railway.app/api/:path*"
        },
        {
            "source": "/((?!api|assets|favicon.ico|robots.txt|manifest.webmanifest).*)",
            "destination": "/"
        }
    ]
}