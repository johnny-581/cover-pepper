{
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api/:path*"
        },
        {
            "source": "/app/:path*",
            "destination": "/"
        },
        {
            "source": "/((?!assets|favicon.ico|robots.txt|manifest.webmanifest).*)",
            "destination": "/"
        },
        {
            "source": "/api/(.*)",
            "destination": "https://cover-pepper-production.up.railway.app/api/$1"
        },
        {
            "source": "/auth/(.*)",
            "destination": "https://cover-pepper-production.up.railway.app/auth/$1"
        }
    ]
}